{
  "name": "@peerigon/template-public-package",
  "version": "0.0.0-semantically-released",
  "description": "Boilerplate template to kick start new public packages at Peerigon",
  "keywords": [],
  "homepage": "https://github.com/peerigon/template-public-package#readme",
  "bugs": {
    "url": "https://github.com/peerigon/template-public-package/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peerigon/template-public-package.git"
  },
  "license": "MIT",
  "author": "Peerigon GmbH <hello@peerigon.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/main.js",
    "./add": "./dist/add.js"
  },
  "main": "./dist/main.js",
  "files": [
    "dist",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "prepare": "husky",
    "test": "run-p test:*",
    "test:format": "prettier --check .",
    "test:lint": "eslint --max-warnings 0 --cache .",
    "test:types": "tsc",
    "test:unit": "vitest --run",
    "vitest": "vitest",
    "build": "run-s build:*",
    "build:clear": "rimraf dist",
    "build:tsc": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@peerigon/configs": "^7.4.0",
    "@types/node": "^24.6.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.36.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "npm-run-all2": "^8.0.4",
    "pin-github-action": "^3.4.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.7",
    "typescript": "^5.9.3",
    "typescript-language-server": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
