{
  "mcpServers": {
    "vitest-server": {
      "command": "npx",
      "args": ["-y", "@djankies/vitest-mcp"]
    },
    "typescript-lsp": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "tritlo/lsp-mcp",
        "typescript",
        "./node_modules/.bin/typescript-language-server",
        "--stdio"
      ]
    },
    "eslint": {
      "command": "npx",
      "args": ["@eslint/mcp"]
    }
  }
}
